{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "git-submodules": {
    "enabled": true
  },
  "minimumReleaseAge": "3 days",
  "extends": [
    "config:recommended",
    "config:best-practices",
    "security:openssf-scorecard",
    "helpers:pinGitHubActionDigests",
    ":rebaseStalePrs"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "github.com/openmcp-project/*"
      ],
      "description": "Update all components from openmcp-project immediately",
      "rebaseWhen": "auto",
      "minimumReleaseAge": "0 days",
      "enabled": true
    },
    {
      "description": "Ignore our own image in chart as it will be updated on release",
      "matchPackageNames": ["ghcr.io/openmcp-project/images/quota-operator"],
      "matchManagers": ["helm-values"],
      "enabled": false
    }
  ]
}
